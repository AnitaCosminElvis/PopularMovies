<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="184px"
    android:layout_height="276px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cardview"
    android:layout_marginLeft="@dimen/std_sw_size"
    android:layout_marginRight="@dimen/std_sw_size"
    android:layout_marginTop="@dimen/std_sw_size"
    android:layout_marginBottom="@dimen/std_sw_size">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>

</android.support.v7.widget.CardView>